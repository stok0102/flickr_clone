!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Flickr Clone
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %p.notice= notice
    %p.alert= alert
    %ul.navbar
      %li.navbar-link= link_to "Home", root_path
      %li.navbar-link= link_to "Photos", photos_path
      - if current_user
        -if current_user.account
          %li.navbar-link= link_to "My Profile", account_path(current_user.account)
        %li.navbar-link= link_to "Sign Out", destroy_user_session_path, method: 'DELETE'
      - else
        %li.navbar-link= link_to "Sign Up", new_user_registration_path
        %li.navbar-link= link_to "Sign In", user_session_path
    %section
      = yield
