!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Rpg
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %p.notice= notice
    %p.alert= alert
    %ul.navbar
      - if current_user
        %li.navbar-link= link_to "Sign Out", destroy_user_session_path, method: 'DELETE'
      - else
        %li.navbar-link= link_to "Sign Up", new_user_registration_path
        %li.navbar-link= link_to "Sign In", user_session_path
    %section
      = yield
